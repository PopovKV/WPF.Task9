<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="#313131"/>

    </Style>
    <Style x:Key="TextBoxStyle">
        <Setter Property="Control.Background" Value="#1a1a1a"/>
    </Style>
    <Style x:Key="MenuItemStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Foreground" Value="#ededed"/>

    </Style>
    <Style x:Key="MenuStyle" BasedOn="{StaticResource MenuItemStyle}"/>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource MenuItemStyle}"/>
    <Style x:Key="ToolBarTrayStyle" BasedOn="{StaticResource MenuItemStyle}"/>
    
    <Style x:Key="ComboBoxStyle" BasedOn="{StaticResource MenuItemStyle}"/>    
</ResourceDictionary>